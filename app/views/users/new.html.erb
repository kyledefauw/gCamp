<div class="page-header">
  <h1>New User</h1>
</div>

<%= form_for @user, html: {class: "form-horizontal"} do |f| %>

<div class="form-group">
  <% if @user.errors.any? %>
    <div class="col-md-6 col-md-offset-2">
      <div class="alert alert-danger">
        <h3> <%= pluralize(@user.errors.count, 'errors') %> prohibited this form from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    </div>
  <% end %>
</div>

  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Create User</button>
      <%= link_to 'Cancel', users_path, class: 'btn btn-default' %>
    </div>
  </div>
</form>

<% end %>
