  <div class="page-header">
    <%= link_to "Edit", edit_project_task_path(@project, @task), class:"btn btn-info pull-right" %>

      <% if @task.complete == true %>
        <s><h1><%= @task.description %></h1></s>
      <% else %>
        <h1><%= @task.description %></h1>
      <% end %>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to "Projects", projects_path %></li>
    <li><%= link_to @project.name, project_path(@project) %></li>
    <li><%= link_to "Tasks", project_tasks_path %></li>
    <li><%= @task.description %></li>
  </ol>

  <strong>Due on: </strong><%= @task.date.strftime("%m/%d/%Y") %>

  <h3>Comments</h3>

  <%= @comments.each do |comment| %>

  <div class="row">
      <%= link_to "#{comment.user.full_name}", user_path(@user) %>
    <div class="col-md-3 text-muted">
      <%= comment.time_ago_in_words(comment.created_at) %>
    </div>

    <div class="col-md-9">
      <%= comment.message %>
    </div>
    <% end %>
  </div>
  <br>

  <div class="row">
    <div class="col-md-9 col-md-offset-3">
    <%= form_for [@task, @comment] do |f| %>
      <div class = "form-group">
        <%= f.text_area :message, class: "form-control" %>
      </div>
      <div class = "form-group">
        <%= f.submit "Add Comment", class: "form-control" %>
      </div>
    <% end %>
    </div>
  </div>
