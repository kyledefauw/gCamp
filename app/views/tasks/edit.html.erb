  <div class="page-header">
    <h1>Edit Task</h1>
  </div>

  <div class="form-horizontal">
    <a href="/tasks">Tasks</a> >
    <a href="/tasks"><%= @task.description %></a> >
    <class="active">Edit Task
  <br>
  <br>

        <%= form_for @task do |f| %>
    <div class = "form-group">
        <%= f.label :description, class: "col-md-1 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class = "form-group">
        <%= f.label :name, "Due Date", class: "col-md-1 control-label" %>
      <div class="col-md-2">
        <%= f.text_field :date, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class = "col-md-offset-1 col-md-10">
        <%= f.check_box :complete %>
        <%= f.label :complete %>
      </div>
    </div>

    <div class= "form-group">
        <div class= "col-md-offset-1 col-md-10">
        <%= f.submit "Update Task", class:"btn btn-primary" %>
        <%= link_to "cancel", tasks_path, class:"btn btn-default" %>
      </div>
    </div>
  <br>
</div>

  <% end %>
