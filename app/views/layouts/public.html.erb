<!DOCTYPE html>
<html>
<head>
  <title>gCamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="container">
          <%= link_to "gCamp", root_path, class: 'navbar-brand' %>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li><%= link_to current_user.full_name, user_path(current_user) %></li>
              <li><%= link_to "Sign Out", sign_out_path %></li>
            <% else %>
              <li><%= link_to "Sign Up", sign_up_path %></li>
              <li><%= link_to "Sign In", sign_in_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="container">

  <% if notice %>
  <p class="alert alert-success" role="alert"><%= notice %></p>
  <% end %>

  <% if flash[:error] %>
    <div class="alert alert-danger text-left"><%= flash[:error] %></div>
  <% end %>

  <%= yield %>

    <footer><hr>
        <%= link_to "Home", root_path %> |
        <%= link_to "About", about_path %> |
        <%= link_to "Terms", terms_path %> |
        <%= link_to "FAQ", faq_path %> |

        <%= link_to image_tag("gschool_logo.png", class: "img-footer"), "https://students.gschool.it/cohorts/8/students/287"%>
        <%= link_to image_tag("twitter_logo.png", class: "img-footer"), "https://twitter.com/KyleDeFauw"%>
        <%= link_to image_tag("github_logo.png", class: "img-footer"), "https://github.com/kyledefauw"%>
        <%= link_to image_tag("linkedin_logo.jpg", class: "img-footer"), "https://www.linkedin.com/profile/view?id=170108432&trk=nav_responsive_tab_profile"%>
    </footer>
  </div>
</body>
</html>
